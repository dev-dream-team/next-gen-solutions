{{#if users.length}}
  <section class="suggestions">
    <div class="row">
      {{#each users as |user|}}
        <div class="col-sm-3">
          <div class="user">
            <div class="header-wrapper card-header">
              <div>
                <h2>
                  <a href="/userProfile">
                    {{user.username}}
                  </a>
                </h2>
              </div>
              <div class="avatar-wrapper">
                <img src={{user.profile_url}} alt="User avatar" class="avatar" />
              </div>
              <div class="interests">
                {{user.interest}}
              </div>
              <button type="submit" class="btn">
                View user profile
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
  <script src="/javascript/view-userProfile.js"></script>
{{/if}}
{{> auth-user-navbar}}
<button
  onclick="location.href = '/dashboard/search';"
  class="btn btn-success btn-block"style="color:red;font-size: 25pt;color:#fbff00">Search for more users
</button> 
<div class="page-wrapper">
<div class="row">
<section class="my-profile col">      
<h4>My Profile</h4>
  <div class="col">
    <div class="my-profile">
            <div class="header-wrapper card-header">
              <div class="row">
              <div class="avatar-wrapper col">
                <img src={{userData.profile_url}} alt="User avatar" class="avatar" />
              </div>  
              <div class="my-profile col">
                 <div>  
                     Username: {{userData.user.username}}
                  </div>  
                  <div>
                     Gender: {{userData.gender}}
                  </div>  
                    <div>
                     Age: {{userData.age}}
                  </div>  
                   <div>
                     Contact Info: {{userData.phone}} {{userData.instragram}} {{userData.facebook}}
                  </div>
                    <div>
                     Interests: 
                     {{#each userData.user_interests as |interest|}}
                     {{interest.interest_name}}
                      {{/each}}
                  </div>  
                  <div>
                      Short bio: {{userData.bio}}
                  </div>
              </div>  
              </div>
            </div>
          </div>
 </div>
</section>
{{#if suggestedUserProfiles.length}}
  <section class="suggestions col">
    <h4>Users with similar interests</h4>
    <div class="row">
      {{#each suggestedUserProfiles as |suggestedUserProfile|}}
        <div class="col-sm-4">
          <div class="user">
            <div class="header-wrapper card-header">
              <div>
                <h5>
                  {{suggestedUserProfile.user.username}}
                </h5>
              </div>
              <div class="avatar-wrapper">
                <img src={{suggestedUserProfile.profile_url}} alt="User avatar" class="avatar" />
              </div>
            <div class="user-info">
              Age: {{suggestedUserProfile.age}}
              </div>
             <div class="user-info">
              Gender: {{suggestedUserProfile.gender}}
              </div>
             <div class="user-info">
               {{#if suggestedUserProfile.instagram}}
               <a href="{{suggestedUserProfile.instagram}}">{{format_url suggestedUserProfile.instagram}}</a>
               {{/if}}
              </div>
                <div>
                     Interests: 
                     {{#each suggestedUserProfile.user_interests as |interest|}}
                     {{interest.interest_name}}
                      {{/each}}
                  </div>  
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
</div>
</div>
{{/if}}